{% extends 'base.html.twig' %}

{% block title %}Gestion des Offres
{% endblock %}

{% block body %}
	<div class="admin-header">
		<h1>Gestion des Offres</h1>

		<a class="admin-highlight" href="{{ path('admin_offer_add') }}">‚ûï Ajouter une offre</a>

		<table>
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prix</th>
					<th>Places</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for offer in offers %}
					<tr>
						<td>{{ offer.name }}</td>
						<td>{{ offer.price }}
							‚Ç¨</td>
						<td>{{ offer.places }}</td>
						<td>
							<a class="admin-highlight" href="{{ path('admin_offer_edit', { id: offer.id }) }}">‚úè Modifier</a>
							|
							<a class="admin-highlight" href="{{ path('admin_offer_delete', { id: offer.id }) }}" onclick="return confirm('Supprimer cette offre ?');">üóë Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	{% if offers is empty %}
		<p>Aucune offre disponible.</p>
	{% endif %}
{% endblock %}
