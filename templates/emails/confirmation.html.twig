{# templates/emails/confirmation.html.twig #}
<!DOCTYPE html>
<html>
  <body style="font-family:Arial,sans-serif; color:#333;">
    <h2>Bonjour {{ user.prenom }} {{ user.nom }},</h2>
    <p>Merci pour votre commande JO 2024 du {{ order.createdAt|date('d/m/Y H:i') }}.</p>
    <p>Votre clé de sécurité : <code>{{ eBillet.clefFinale }}</code></p>
    <p>Voici votre e-billet (QR Code) :</p>
    <p>
      <img 
        src="{{ eBillet.qrCode }}" 
        alt="QR Code e-billet" 
        style="max-width:300px;"
      >
    </p>
    <p>Présentez ce QR Code à l’entrée des Jeux olympiques.</p>
    <hr>
    <p>À bientôt,<br>Équipe JO 2024</p>
  </body>
</html>
