{# templates/commande/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Récapitulatif de votre panier – JO 2024{% endblock %}

{% block body %}
  <div class="container mt-5">
    <h1>Récapitulatif de votre panier</h1>

    <table class="table" id="cart-table">
      <thead>
        <tr>
          <th>Offre</th>
          <th>Quantité</th>
          <th>Prix unitaire</th>
          <th>Sous-total</th>
        </tr>
      </thead>
      <tbody><!-- JS --></tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">Total :</th>
          <th id="cart-total">0,00 €</th>
        </tr>
      </tfoot>
    </table>

    <a href="{{ path('checkout') }}" class="btn btn-success mb-5">
      Procéder au paiement
    </a>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/commande.js') }}"></script>
{% endblock %}
