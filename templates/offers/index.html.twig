{% extends 'base.html.twig' %}

{% block title %}Offres – JO 2024{% endblock %}

{% block body %}
  <div class="container mt-5">
    <h1>Nos Offres</h1>
    <ul class="list-group">
      {% for offer in offers %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{ offer.name }} ({{ offer.places }} personne{{ offer.places > 1 ? 's' : '' }})
          <span>{{ offer.price }} €</span>
        </li>
      {% endfor %}
    </ul>
    <p class="mt-3">
      <a href="{{ path('home') }}">← Retour à l’accueil</a>
    </p>
  </div>
{% endblock %}