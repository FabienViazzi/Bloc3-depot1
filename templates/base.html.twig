<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<link
		rel="stylesheet" href="{{ asset('css/style.css') }}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}


	</head>
	<body>
		<div class="main">

			<div class="container" id="header">
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
					<div class="container">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('home') }}">
									<i class="fa-solid fa-medal" id="JO"></i>Accueil
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('offers_list') }}">Offres</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('commande') }}" class="position-relative me-3">
									<i class="fa-solid fa-cart-shopping"></i>
									<span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
								</a>
							</li>
							<li class="nav-item">
								{% if app.user %}
									<a class="btn btn-outline-secondary" href="{{ path('app_logout') }}">Déconnexion</a>
								{% else %}
									<a class="btn btn-primary" href="{{ path('app_login') }}">Connexion</a>
								{% endif %}
							</li>
						</ul>
					</div>
				</nav>
			</div>

			<div class="container" id="content">
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label }}">{{ message }}</div>
					{% endfor %}
				{% endfor %}
				{% block body %}{% endblock %}
			</div>
			{% include 'footer/footer.html.twig' %}

			<script src="{{ asset('js/commande.js') }}"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js" integrity="sha512-b+nQTCdtTBIRIbraqNEwsjB6UvL3UEMkXnhzd8awtCYh0Kcsjl9uEgwVFVbhoj3uu1DO1ZMacNvLoyJJiNfcvg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		</div>
	</body>
</html>
